{{ define "upload.page.tmpl" }}

{{ template "header" .}}

   <div class="container">
        <div class="row">
            <div class="col">
                <h1>Upload Files</h1>
                <p>
                  <form id="upload-form" action="http://localhost:8080/upload" method="POST" enctype="multipart/form-data" onsubmit="return false">
                    <label for="bcdate">Choose a broadcast date:</label>
                    <input type="date" id="bcdate" name="bcdate" required><br />
                    <label for="starttime">Choose a start time:</label>
                    <input type="time" id="starttime" name="starttime" required><br />
                    <label for="endtime">Choose an end time:</label>
                    <input type="time" id="endtime" name="endtime" required><br />
                    <label for="file">Choose a file:</label>
                    <input type="file" id="file" name="file" required>
                    <input type="submit" id="upload" value="Upload" onclick="submitForm(this.id)" />
                  </form>
                </p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="form-outline">
                    <input class="form-control" id="status" type="text" aria-label="readonly input" readonly /><br/>
                </div>
            </div>
        </div>
    </div>

{{ template "footer" .}}

{{ end }}
